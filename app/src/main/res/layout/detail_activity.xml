<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.list.DetailActivity">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customCardImage"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/customDetailImage"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:src="@drawable/woodflooring1"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$62-$166"
            android:id="@+id/customPrice"
            android:layout_marginStart="10dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wood Flooring"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produk Details:"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produk ini terbuat dari biji kopi pilihan yang dipetik secara manual dan diproses dengan teliti. Rasanya kaya dengan aroma yang nikmat."
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:id="@+id/customProdukDetails"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produk Descriptions:"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wood Flooring adalah jenis lantai yang terbuat dari kayu asli yang mempersembahkan kehangatan dan keindahan alami ke dalam ruangan. Lantai kayu ini terkenal karena kekuatan, daya tahan, dan penampilannya yang elegan, membuatnya menjadi pilihan populer untuk berbagai jenis ruangan."
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:id="@+id/customProdukDescriptions"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/store_info"
                android:layout_gravity="center"
                android:contentDescription="Store Info"
                android:onClick="storeInfoButtonClicked"
                android:padding="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat Seller"
                android:layout_gravity="center"
                android:layout_marginStart="10dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>